<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="robot" default="spot-3"/><group if="$(eval {'ctu-robot': 0, 'flip': 0, 'marv-robot': 0, 'spot-3': 0}[robot])"/>

    <!-- Camera topic -->
    <arg name="camera_topic" value="/viz/camera_4/image" if="$(eval robot == 'ctu-robot')"/>
    <arg name="camera_topic" value="TODO" if="$(eval robot == 'flip')"/>
    <arg name="camera_topic" value="/camera_front/image_color" if="$(eval robot == 'marv-robot')"/>
    <arg name="camera_topic" value="/camera_front/image_color" if="$(eval robot == 'spot-3')"/>

    <!-- RViz -->
    <node name="rviz" pkg="rviz" type="rviz" output="screen"
          args="-d $(find robotour)/data/robotour.rviz" respawn="true" respawn_delay="1.0">

        <remap from="camera/color" to="$(arg camera_topic)"/>
    </node>

    <node name="set_rviz_log_level" pkg="rosservice" type="rosservice"
          args="call --wait /rviz/set_logger_level 'ros.rviz' 'error'"/>
</launch>
